{
    // Python-Interpreter auf die virtuelle Umgebung setzen
    "python.defaultInterpreterPath": "./venv/bin/python",
    // Formatierung
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=88",
        "--target-version=py312"
    ],
    // Automatische Formatierung beim Speichern
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    // Automatische Aktionen beim Speichern für Python-Dateien
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll.ruff": "explicit"
        }
    },
    // Linting mit Ruff
    "python.linting.enabled": true,
    "python.linting.ruffEnabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    // MyPy für Type-Checking
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--config-file=pyproject.toml"
    ],
    // Test-Framework
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    // Weitere Editor-Einstellungen
    "editor.rulers": [
        88
    ], // Zeigt die 88-Zeichen-Linie
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // Python-spezifische Einstellungen
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    // Sphinx-Dokumentation
    "restructuredtext.confPath": "./docs/source",
    // Ausgeschlossene Dateien/Ordner
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        ".nox": true,
        ".pytest_cache": true,
        ".mypy_cache": true,
        "htmlcov": true,
        "*.egg-info": true
    }
}
