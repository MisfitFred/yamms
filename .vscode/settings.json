{
    // Python-Interpreter auf nox dev_install environment setzen
    "python.defaultInterpreterPath": "./.nox/dev_install/bin/python",

    // Ruff-spezifische Einstellungen - verwende ruff aus nox environment
    "ruff.path": ["./.nox/dev_install/bin/ruff"],
    // === BLACK FORMATTER EXTENSION ===
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports.ruff": "explicit",
            "source.fixAll.ruff": "explicit"
        }
    },
    // Black Formatter Extension Einstellungen
    "black-formatter.args": [
        "--line-length=88",
        "--target-version=py312"
    ],
    // === RUFF EXTENSION ===
    // Ruff Extension f端r Linting und Fixing
    "ruff.enable": true,
    "ruff.organizeImports": true,
    "ruff.fixAll": true,
    "ruff.codeAction.fixViolation": {
        "enable": true
    },
    "ruff.codeAction.disableRuleComment": {
        "enable": true
    },
    // Alte Python Extension Linting deaktivieren (Ruff Extension 端bernimmt)
    "python.linting.enabled": false,
    "python.linting.ruffEnabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    // MyPy f端r Type-Checking (weiterhin 端ber Python Extension)
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--config-file=pyproject.toml"
    ],
    // === ALLGEMEINE EDITOR-EINSTELLUNGEN ===
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.rulers": [
        88
    ], // Zeigt die 88-Zeichen-Linie (sync mit Black)
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // === PYTHON ANALYSIS ===
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    // === TEST-FRAMEWORK ===
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    // === DOKUMENTATION ===
    "restructuredtext.confPath": "./docs/source",
    // === AUSGESCHLOSSENE DATEIEN ===
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        ".nox": true,
        ".pytest_cache": true,
        ".mypy_cache": true,
        "htmlcov": true,
        "*.egg-info": true,
        "dist": true,
        "build": true
    }
}
